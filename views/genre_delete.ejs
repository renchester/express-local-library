<h1><%= title %>: <%= genre.name %></h1>

<% if (genre_books.length > 0) { %>
<p>
  <strong
    >Delete the following books before attempting to delete this genre.</strong
  >
</p>

<div style="margin-left: 20px; margin-top: 20px">
  <h4>Books</h4>
  <dl>
    <% genre_books.forEach((book) => { %>
    <dt>
      <a href="<%= book.url %>"><%= book.title %></a>
    </dt>
    <dd><%= book.summary %></dd>
    <% }) %>
  </dl>
</div>

<% } else { %>
<p>Do you really want to delete this Genre?</p>
<form action="" method="POST">
  <div class="form-group">
    <input
      id="genreid"
      class="form-control"
      type="hidden"
      name="genreid"
      required="true"
      value="<%=genre._id%>"
    />

    <button class="btn btn-primary" type="submit">Delete</button>
  </div>
</form>
<% } %>
